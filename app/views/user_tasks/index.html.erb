<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="text-center">The Big List</h1>
  <hr>

  <div class="row">
      <div class="col-md-6 col-md-offset-3
                    col-sm-8 col-sm-offset-2
                    col-xs-10 col-xs-offset-1">
        <div id="task-form"></div>
      </div>
  </div>


  <div class="row">
    <div class="col-md-8 col-md-offset-2
                  col-sm-10 col-sm-offset-1">
      <div id="tasks">
        <%= render @user_tasks %>
      </div>

      <br>

      <%= link_to new_user_task_path, remote: true do %>
        <button class="btn btn-default add-task">
          <%= fa_icon('plus') %> Add Task
        </button>
      <% end %>

    </div>
  </div>
</div>
